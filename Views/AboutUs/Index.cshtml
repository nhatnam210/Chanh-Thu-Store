@section scripts{
    <script>
        var check = true;
        $('#view-more-intro').click(() => {
            check = !check;
            $('#view-more-intro').html("");
            if (check) {
                $('#introduce-shop').addClass('show');
                $('#view-more-intro').html("Ẩn bớt");
            } else {
                $('#introduce-shop').removeClass('show');
                $('#view-more-intro').html("Xem thêm");
            }
        })
    </script>
}