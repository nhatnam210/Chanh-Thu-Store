@model ChanhThu_Store.Models.Cart
@{
    ViewBag.Title = "ShowToCart";
    Layout = "~/Views/Shared/_Main_Layout.cshtml";
}

@if (Model != null)
{
    <!-- Start All Title Box -->
    <div class="all-title-box">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2>Cart</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Shop</a></li>
                        <li class="breadcrumb-item active">Cart</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- End All Title Box -->
    <!-- Start Cart  -->
    <div class="cart-box-main">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="table-main table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Hình ảnh</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Giá</th>
                                    <th>Số lượng</th>
                                    <th>Tổng cộng</th>
                                    <th>Xóa</th>
                                    <th>Cập nhật</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    double total = Convert.ToDouble(item._ShoppingProduct.Gia * item._ShoppingQuantity);
                                    using (Html.BeginForm("UpdateQuantityCart", "ShoppingCart"))
                                    {
                                        <tr>
                                            <td class="thumbnail-img">
                                                <a href="#">
                                                    <img class="img-fluid" src="@item._ShoppingProduct.HinhChinh" alt="" />
                                                </a>
                                            </td>
                                            <td class="name-pr">
                                                <a href="#">
                                                    @item._ShoppingProduct.TenSanPham
                                                </a>
                                            </td>
                                            <td class="price-pr">
                                                <p>@item._ShoppingProduct.Gia</p>
                                            </td>

                                            <td class="quantity-box">

                                                <input type="hidden" value="@item._ShoppingProduct.MaSanPham" name="id_Product" />
                                                <input type="number" size="4" value="@item._ShoppingQuantity" min="0" step="1" class="c-input-text qty text" name="quantity">



                                            </td>
                                            <td class="total-pr">
                                                <p>@total</p>
                                            </td>
                                            <td class="remove-pr">
                                                <a href="#">
                                                    <i class="fas fa-times"></i>
                                                </a>
                                            </td>
                                            <td class="update-box">

                                                <input value="Cập Nhật" type="submit">

                                            </td>
                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="row my-5">
                <div class="col-lg-6 col-sm-6">
                    <div class="coupon-box">
                        <div class="input-group input-group-sm">
                            <input class="form-control" placeholder="Nhập mã voucher" aria-label="Coupon code" type="text">
                            <div class="input-group-append">
                                <button class="btn btn-theme" type="button">Sử dụng voucher</button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <div class="row my-5">
                <div class="col-lg-8 col-sm-12"></div>
                <div class="col-lg-4 col-sm-12">
                    <div class="order-box">
                        <h3>Đơn hàng</h3>
                        <div class="d-flex">
                            <h4>Tiền hàng</h4>
                            <div class="ml-auto font-weight-bold"> $ 130 </div>
                        </div>
                        <div class="d-flex">
                            <h4>Phí ship</h4>
                            <div class="ml-auto font-weight-bold"> Free </div>
                        </div>
                        <div class="d-flex">
                            <h4>Thuế</h4>
                            <div class="ml-auto font-weight-bold"> $ 2 </div>
                        </div>
                        <hr class="my-1">
                        <div class="d-flex">
                            <h4>Voucher giảm giá</h4>
                            <div class="ml-auto font-weight-bold"> $ 10 </div>
                        </div>


                        <hr>
                        <div class="d-flex gr-total">
                            <h5>Tổng cộng</h5>
                            <div class="ml-auto h5"> $ 388 </div>
                        </div>
                        <hr>
                    </div>
                </div>
                <div class="col-12 d-flex shopping-box"><a href="checkout.html" class="ml-auto btn hvr-hover">Thanh toán</a> </div>
            </div>

        </div>
    </div>
    <!-- End Cart -->
}
