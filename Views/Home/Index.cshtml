@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Main_Layout.cshtml";
}


<!-- Start Slider -->
@Html.Partial("_Slider_header", ChanhThu_Store.Models.BUS.SliderBUS.DanhSachSliderHeader())
<!-- End Slider -->
<!-- Start Categories  -->
<div class="categories-shop">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <div class="shop-cat-box">
                    <img class="img-fluid" src="~/Content/images/cate1.jpg" alt="" />
                    <a class="btn hvr-hover" href="#">Bánh Hộp</a>
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <div class="shop-cat-box">
                    <img class="img-fluid" src="~/Content/images/cate2.jpg" alt="" />
                    <a class="btn hvr-hover" href="#">Bánh Mứt</a>
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <div class="shop-cat-box">
                    <img class="img-fluid" src="~/Content/images/cate3.png" alt="" />
                    <a class="btn hvr-hover" href="#">Bánh Nhập Khẩu</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Categories -->

@Html.Partial("_Banner",ChanhThu_Store.Models.BUS.BannerBUS.DanhSachBanner())

<!-- Start Products  -->
<div class="products-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="title-all text-center">
                    <h1>Bánh & Kẹo</h1>
                    <p>Chất lượng hàng đầu chúng tôi số 2 không ai số 1</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="special-menu text-center">
                    <div class="button-group filter-button-group">
                        <button class="active" data-filter="*">Tất Cả</button>
                        <button data-filter=".top-featured">Nổi Bật</button>
                        <button data-filter=".best-seller">Bán Chạy</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="row special-list">

            @Html.Partial("_Sanphamnoibat", ChanhThu_Store.Models.BUS.SanPhamBUS.Sanphamnoibat())

            @Html.Partial("_Sanphambanchay", ChanhThu_Store.Models.BUS.SanPhamBUS.Sanphambanchay())


        </div>
    </div>
</div>
<!-- End Products  -->
<!-- Start Blog  -->
<div class="latest-blog">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="title-all text-center">
                    <h1>Sản phẩm Mới Nhất</h1>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed sit amet lacus enim.</p>
                </div>
            </div>
        </div>
        @Html.Partial("_SanPhamMoiNhat",ChanhThu_Store.Models.BUS.SanPhamBUS.Top3Sanphammoi())
    </div>
</div>
<!-- End Blog  -->