@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    if (User.IsInRole("Admin"))
    {
        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
        {
            @Html.AntiForgeryToken()

            <a href="/admin" class="btn login hvr-hover">Quản lý</a>
            <a class="btn login hvr-hover" href="javascript:document.getElementById('logoutForm').submit()">Đăng Xuất</a>
        }
    }
    else
    {
        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
        {
            @Html.AntiForgeryToken()
            <a href="/nguoi-dung" class="name-account" routeValues: null>
                @*@User.Identity.GetUserName()*@
                <span>
                    @{
                        Html.RenderAction("GetAvatarLogin", "Account");
                    }
                </span>

            </a>
            <a class="btn login hvr-hover" href="javascript:document.getElementById('logoutForm').submit()">Đăng xuất</a>
        }
    }
}
else
{
    <a href="/dang-nhap" class="btn login hvr-hover">Đăng nhập</a>
    <a href="/dang-ky" class="btn register hvr-hover">Đăng ký</a>
}
