@model IEnumerable<ChanhThu_Store.Models.SlideHeader>
<div id="slides-shop" class="cover-slides">
    <ul class="slides-container">
        @foreach (var i in Model)
        {
            <li class="text-center">
                <img src="@i.HinhSlideHeader" alt="">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <h1 class="m-b-20"><strong>Chào Mừng Đến Với <br> ChanhThuStore</strong></h1>
                            <p class="m-b-40">@i.MoTaSliderHeader <br> Khách hàng là thượng đế.</p>
                            <p><a class="btn hvr-hover" href="/cua-hang">Mua Ngay</a></p>
                        </div>
                    </div>
                </div>
            </li>

        }
    </ul>
    <div class="slides-navigation">
        <a href="#" class="next"><i class="fa fa-angle-right" aria-hidden="true"></i></a>
        <a href="#" class="prev"><i class="fa fa-angle-left" aria-hidden="true"></i></a>
    </div>
</div>

