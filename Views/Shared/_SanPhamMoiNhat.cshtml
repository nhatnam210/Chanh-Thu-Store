@model IEnumerable<ChanhThu_Store.Models.SanPham>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-6 col-lg-4 col-xl-4">
            <div class="blog-box full-radius shadow" >
                <div class="blog-img">
                    <img class="img-fluid" src="@item.HinhChinh" alt="" />
                </div>
                <div class="blog-content">
                    <div class="title-blog">
                        <h3>@item.TenSanPham</h3>
                        <p class="new-product-descrip">
                            @item.Mota
                        </p>
                    </div>
                    <ul class="option-blog">
                        <li><a href="#"><i class="far fa-heart"></i></a></li>
                        <li><a href="/san-pham/chi-tiet?id=@item.MaSanPham"><i class="fas fa-eye"></i></a></li>
                        
                    </ul>
                </div>
            </div>
        </div>
    }



</div>
