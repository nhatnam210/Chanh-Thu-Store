@model ChanhThu_Store.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";

    Layout = "~/Views/Shared/_Main_Layout2.cshtml";

}



@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Đặt lại mật khẩu mới</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Code)
    <div class="form-group">
            Email
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Nhập Email đã đăng ký" })
            </div>
        </div>
    <div class="form-group">
        Mật khẩu mới
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Nhập mật khẩu mới" })
        </div>
    </div>
    <div class="form-group">
       Xác thực mật khẩu
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Nhập lại mật khẩu phía trên" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn hvr-hover btn-update-info max-width-mobile" value="Đặt lại mật khẩu" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
