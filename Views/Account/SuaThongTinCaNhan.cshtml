                <div class="col-md-12">
                    @Html.LabelFor(model => model.Avatar, htmlAttributes: new { @class = "control-label " })
                    <div class="col-md-12">
                        @*@Html.TextBoxFor(model => model.Avatar, new { htmlAttributes = new { @class = "form-control linkImg" }, id = "linkImg" })*@
                        <input id="linkImg" class="form-control" name="Avatar" value="" readonly="readonly" />
                        <a href="#" id="selectImg">Chọn ảnh</a>
                        @Html.ValidationMessageFor(model => model.Avatar, "", new { @class = "text-danger" })
                    </div>
                 </div>
                </div>
            <div class="form-group">
