@model ChanhThu_Store.Models.AspNetUser
@{
    ViewBag.Title = "SuaThongTinCaNhan";
    Layout = "~/Views/Shared/_Main_Layout.cshtml";
}
@section jsFooter{
    <script>
        $('#selectImg').on('click', function (e) {
            e.preventDefault();
            var finder = new CKFinder();
            finder.callback = function (api) {
                // Disable download function
                api.disableFileContextMenuOption('downloadFile', false);
                // Disable "View" option
                api.disableFileContextMenuOption('viewFile');
            }
            finder.selectActionFunction = function (fileUrl) {
                $('#linkImg').val(fileUrl);
            };
            finder.popup();
        })
    </script>
}
<!-- Start All Title Box -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Thông Tin Cá Nhân</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/trang-chu">Trang Chủ</a></li>
                    <li class="breadcrumb-item active">Thông Tin Cá Nhân</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="main">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
