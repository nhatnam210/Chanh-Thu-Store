@model List<ChanhThu_Store.Models.Voucher>
@*@model List<ChanhThu_Store.Models.CartItem>*@
<h2>Voucher bạn có thể đổi</h2>

@if (Model.Count > 0)
{
    <table class="table">
        <tr>
            <th>
                Mã Voucher
            </th>
            <th>
                Tên Voucher
            </th>
            <th>
                Giá trị giảm
            </th>
            <th>
                Hạn sử dụng
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.MaVoucher
                </td>
                <td>
                    @item.TenVoucher
                </td>
                <td>
                    @item.GiaTriGiam
                </td>
                <td>
                    @item.HanSuDung
                </td>
            </tr>
        }

    </table>

}
else
{
    <h3>Bạn tuổi gì???</h3>
}
