@model IEnumerable<ChanhThu_Store.Models.Voucher>
@using System.Globalization;
@{ CultureInfo VN = new CultureInfo("vi-VN");}

@{
    ViewBag.Title = "DanhSachVoucher";
    Layout = "~/Views/Shared/_Main_Layout.cshtml";
}

<!-- Start All Title Box -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="text-capitalize">Voucher</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Trang Chủ</a></li>
                    <li class="breadcrumb-item active">Voucher</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->
<!-- Start Shop Page  -->
<div class="shop-box-inner">
    <div class="container full-container">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-sm-12 col-xs-12 shop-content-left">
                <div class="right-product-box">
                    @{
                        Html.RenderAction("LayDiemUser", "Vouchers");
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="container voucher_place">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-xl-4 col-md-6 col-sm-12 voucher__container">
                    <div class="voucher__item">
                        <div class="voucher__item--left">
                            <div class="voucher__item--left-wrap">
                                <span class="voucher__code">@item.MaVoucher</span>
                                <span class="voucher__value-wrap">
                                    <span class="voucher__value-percent text-uppercase">@item.GiaTriGiam</span><span>%</span>
                                </span>
                            </div>
                        </div>
                        <div class="voucher__item--right">
                            <div class="voucher__item--right-wrap">
                                <div class="voucher__item--right-wrap--top">
                                    <div class="voucher__name">@item.TenVoucher</div>
                                    <div class="voucher__date">
                                        <small>HSD:</small>
                                        @item.HanSuDung.ToString("d", VN)
                                    </div>
                                </div>
                                <div class="voucher__item--right-wrap--bottom">
                                    <div data-point="@item.DiemDoi" class="voucher__point">
                                        <span>@item.DiemDoi</span>
                                        <small>điểm</small>
                                    </div>
                                    <div class="voucher-button">
                                        <ion-icon class="show-ask-options" name="arrow-up-circle-outline"></ion-icon>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="ask-options">
                        <span class="ask-options__title">Bạn muốn đổi phiếu này?</span>
                        <div class="ask-options__select">
                            <a href="Vouchers/DoiVoucher?idVoucher=@item.MaVoucher"
                               class="ask-options__btn ask-options--yes">Đồng ý</a>
                            <div class="ask-options__btn ask-options--no">Hủy</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- End Shop Page -->
