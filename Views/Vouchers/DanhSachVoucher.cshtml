<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenVoucher)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GiaTriGiam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiemDoi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HanSuDung)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenVoucher)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaTriGiam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiemDoi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HanSuDung)
            </td>
            <td>
                @*@Html.ActionLink("Đổi thôi!", "DoiVoucher", new { idVoucher = item.MaVoucher })*@
                <a class="btn login hvr-hover" href="/Vouchers/DoiVoucher?idVoucher=@item.MaVoucher">Nút đổi</a>
            </td>
        </tr>
    }

</table>
