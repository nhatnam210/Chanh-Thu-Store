@model IEnumerable<ChanhThu_Store.Models.Voucher>

<div class="col-md-12 col-lg-12">
    <div class="shipping-method-box">
        <div class="title-left">
            <h3>Mã giảm giá</h3>
        </div>
        <div class="mb-4">
            @{ var i = 0;}
            @if (Model.Count() > 0)
            {
                <div class="custom-control custom-radio">
                    <input checked="checked" id="voucher__@i" name="mavoucher" value="" data-voucher="0" class="custom-control-input" type="radio">
                    <label class="custom-control-label" for="voucher__@i">Không dùng</label> <span class="float-right font-weight-bold">0%</span>
                </div>
                <div class="ml-4 mb-2 small"></div>
                foreach (var item in Model)
                {
                    i++;
                    <div class="custom-control custom-radio">
                        <input id="voucher__@i" name="mavoucher" value="@item.MaVoucher" data-voucher="@item.GiaTriGiam" class="custom-control-input" type="radio">
                        <label class="custom-control-label" for="voucher__@i">@item.TenVoucher</label> <span class="float-right font-weight-bold">@item.GiaTriGiam%</span>
                    </div>
                    <div class="ml-4 mb-2 small">*HSD: @item.HanSuDung.ToString("dd-MM-yyyy")</div>
                }
            }
            else
            {
                <h3>Bạn chưa có mã giảm giá nào!</h3>
            }
        </div>
    </div>
</div>
