            <div class="col-sm-6 col-lg-6 mb-3">
                <div class="row">
                    <div class="col-md-12 col-lg-12">
                        <div class="shipping-method-box">
                            <div class="title-left">
                                <h3>Phương pháp vận chuyển</h3>
                            </div>
                            <div class="mb-4">
                                <div class="custom-control custom-radio">
                                    <input id="shippingOption1" name="ship" value="0" class="custom-control-input" checked="checked" type="radio">
                                    <label class="custom-control-label" for="shippingOption1">Tiêu Chuẩn</label> <span class="float-right font-weight-bold">Miễn Phí</span>
                                </div>
                                <div class="ml-4 mb-2 small">(3-7 Ngày làm việc)</div>
                                <div class="custom-control custom-radio">
                                    <input id="shippingOption2" name="ship" value="20000" class="custom-control-input" type="radio">
                                    <label class="custom-control-label" for="shippingOption2">Express Delivery</label> <span class="float-right font-weight-bold">20.000 đ</span>
                                </div>
                                <div class="ml-4 mb-2 small">(2-4 ngày làm việc)</div>
                                <div class="custom-control custom-radio">
                                    <input id="shippingOption3" name="ship" value="60000" class="custom-control-input" type="radio">
                                    <label class="custom-control-label" for="shippingOption3">Ngày Hôm Sau</label> <span class="float-right font-weight-bold">60.000 đ</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-12">
                        <div class="odr-box">
                            @if (Model.Count > 0)
                            {
                                <div class="title-left">
                                    <h3>Giỏ hàng</h3>
                                </div>
                                <div class="rounded p-2 bg-second final-bill">
                                    @foreach (var item in Model)

                                    {
                                        Total += item.Sanpham.Gia * item.Soluong;
                                        <div class="media mb-2 border-bottom">
                                            <div class="media-body">
                                                <a href="/cua-hang/san-pham?id=@item.Sanpham.MaSanPham">@item.Sanpham.TenSanPham</a>
                                                <div class="small text-muted"> @string.Format("{0:#,##0}", @item.Sanpham.Gia) đ<span class="mx-2">|</span> @item.Soluong @item.Sanpham.DonViTinh<span class="mx-2">|</span> Tổng : <strong> @string.Format("{0:#,##0}", item.Sanpham.Gia * item.Soluong) đ</strong></div>
                                            </div>
                                        </div>
                                    }


                                </div>
                            }
                            else
                            {
                                <div class="title-left">
                                    <h3>Giỏ hàng <span class="text-muted" style="font-weight: 500;font-size: 16px;">(Trống)</span></h3>
                                </div>
                            }

                        </div>
                    </div>
                    <div class="col-md-12 col-lg-12">
                        <div class="order-box">
                            <div class="title-left">
                                <h3>Thống kê</h3>
                            </div>
                            <div class="d-flex">
                                <div class="font-weight-bold">Sản Phẩm</div>
                                <div class="ml-auto font-weight-bold">Tổng</div>
                            </div>
                            <hr class="my-1">
                            <div class="d-flex">
                                <h4>Tổng tiền</h4>
                                <div class="ml-auto font-weight-bold">  @string.Format("{0:#,##0}", @Total) đ </div>
                            </div>

                            <hr class="my-1">
                            <div class="d-flex">
                                <h4>Voucher</h4>
                                <div id="voucher-fee" class="ml-auto font-weight-bold">0 %</div>
                            </div>
