@section scripts{
    <script>
        $(document).ready(function () {
            $(".js-tongle-like").click(function (e) {
                var element = $(e.target);
                $.post("/api/yeuthich", { MaSanPham: element.attr("product-data") })
                    .done(function (result) {
                        if (result == "cancel") {
                            alert("Thành công!");
                            showNotify('Đã xóa khỏi Yêu thích!', 'heart-dislike-outline', timeShowNotify)
                            element
                                //.text("")
                                .append(` <i class="fas fa-heart not-like-heart-icon"></i>`)

                        } else {
                            alert("Xóa!");
                            showNotify('Đã thêm vào Yêu thích!', 'heart-outline', timeShowNotify)
                            element
                                //.text("")
                                .append(` <i class="fas fa-heart liked-heart-icon"></i>`)
                        }
                    })
                    .fail(function () {
                        alert("Xảy ra lỗi!");
                    });
            });
        });
        //call paginate
        @*var products = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.listsp));
        PagingSort()*@

        //link
        //cua-hang/loai-san-pham?id=DMC01&trang=1&sapxep=ten-A-Z
        $('#basic').change(() => {
            var sortValue = $('#basic').val()

            if (sortValue == "mac-dinh") {
                window.location.href = `/cua-hang/loai-san-pham?id=@ViewBag.Id`
            } else {
                window.location.href = `/cua-hang/loai-san-pham?id=@ViewBag.Id&sapxep=${sortValue}`
            }
        })
    </script>
