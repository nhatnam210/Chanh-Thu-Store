                                                }).fail(function () {
                                                    alert("Xảy ra lỗi!");
                                                });
                                        });
                                    //});
                                </script>*@
                        }
                    </div>
                </div>
                <div role="tabpanel" class="tab-pane fade" id="list-view">
                    @foreach (var item in Model)
                    {
                        <div class="list-view-box">
                            <div class="row">
                                <div class="col-sm-6 col-md-6 col-lg-4 col-xl-4">
                                    <div class="products-single fix shadow">
                                        <div class="box-img-hover none-radius ">
                                            <div class="type-lb">
                                                <p class="sale bottom-left-radius">Sale</p>
                                            </div>
                                            @*<img src="@item.HinhChinh" class="img-fluid" alt="Image">*@
                                            <div class="img-fit" style="background-image: url('@item.HinhChinh'),url('/Content/images/default.png');"></div>
                                            <div class="mask-icon">
                                                <ul>
                                                    <li>
                                                        <a href="/san-pham/chi-tiet?id=@item.MaSanPham" data-toggle="tooltip"
                                                           data-placement="right" title="Xem chi tiết">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                    </li>
                                                    <li>
                                                        @if (item.isLogin)
                                                        {
                                                            if (item.isLiked)
                                                            {
                                                                <a data-product-id="@item.MaSanPham" class="heart-hover js-tongle-yeuthich" data-toggle="tooltip" data-placement="right"
                                                                   title="Yêu thích">
                                                                    <i class="fas fa-heart liked-heart-icon"></i>
                                                                </a>
                                                            }
                                                            else
                                                            {
                                                                <a data-product-id="@item.MaSanPham" class="heart-hover js-tongle-yeuthich" data-toggle="tooltip" data-placement="right"
                                                                   title="Yêu thích">
                                                                    <i class="far fa-heart unliked-heart-icon"></i>
                                                                </a>
                                                            }
                                                        }
                                                        else
                                                        {
                                                            <a href="/dang-nhap" class="heart-hover" data-toggle="tooltip" data-placement="right"
                                                               title="Yêu thích">
                                                                <i class="far fa-heart unliked-heart-icon"></i>
                                                            </a>
                                                        }
                                                    </li>
                                                </ul>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6 col-md-6 col-lg-8 col-xl-8">
                                    <div class="why-text full-width view-column-content full-radius shadow">
                                        <h4>@item.TenSanPham</h4>
                                        <h5>@string.Format("{0:#,##0}", @item.Gia) đ</h5>
                                        <p>
                                            @item.Mota
                                        </p>
                                        <a class="btn hvr-hover add-cart-notify" href="/them-vao-gio?masanpham=@item.MaSanPham&soluong=1">Thêm Vào Giỏ</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <span class="show-page-text text-white">Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount</span>

    @Html.PagedListPager(Model, trang => Url.Action("Index",
        new { trang, sapxep = ViewBag.Sapxep, loc = ViewBag.Loc }))
</div>

