@model ChanhThu_Store.Models.SlideHeader

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Main_Admin.cshtml";
}



@using (Html.BeginForm("Edit", "SlideHeadersAdmin", FormMethod.Post, new { @class = "form" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h2 class="admin-title text-white text-center">Chỉnh sửa thông tin Slider Header</h2>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MaSliderHeader)

    <div class="form-group">
        <span class"label-admin" style="color:var(--primary-color);margin-bottom:12px;display:block">Hình Slider</span>

        <div class="col-md-12">
            @Html.EditorFor(model => model.HinhSlideHeader, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.HinhSlideHeader, "", new { @class = "text-danger" })
        </div>

    </div>
    <div class="form-group">
        <span class"label-admin" style="color:var(--primary-color);margin-bottom:12px;display:block">Mô tả</span>

        <div class="col-md-12">
            @Html.EditorFor(model => model.MoTaSliderHeader, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MoTaSliderHeader, "", new { @class = "text-danger" })
        </div>

    </div>

    <div class="form-group col-md-12">
        <div class="col-md-offset-2 btn-touch">
            <input type="submit" value="Cập nhật" class="btn btn-warning" />
        </div>
    </div>
    <div class="col-md-12 back-to-list ">
        @Html.ActionLink("Trở lại", "Index")
    </div>
</div>
}
