@model ChanhThu_Store.Models.SlideHeader

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Main_Admin.cshtml";
}



@using (Html.BeginForm("Create", "SlideHeadersAdmin", FormMethod.Post, new { @class = "form" }))

{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h2 class="admin-title text-white text-center">Thêm Slider Header</h2>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <span class="label-admin" >Hình Slider</span>
        <div class="col-md-12">
            @Html.EditorFor(model => model.HinhSlideHeader, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.HinhSlideHeader, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <span class="label-admin" >Mô tả Slider</span>
        <div class="col-md-12">
            @Html.EditorFor(model => model.MoTaSliderHeader, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MoTaSliderHeader, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group col-md-12">
        <div class="col-md-offset-2 btn-touch">
            <input type="submit" value="Create" class="btn btn-success" />
        </div>
    </div>
    <div class="col-md-12 back-to-list">
        @Html.ActionLink("Trở về", "Index")
    </div>
</div>
}

