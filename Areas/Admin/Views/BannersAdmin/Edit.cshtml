@model ChanhThu_Store.Models.Banner

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Main_Admin.cshtml";
}

@using (Html.BeginForm("Edit", "BannersAdmin", FormMethod.Post, new { @class = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2 class="admin-title text-white text-center">Chỉnh sửa thông tin Banner</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaBanner)

        <div class="form-group">
            <span class"label-admin" style="color:var(--primary-color);margin-bottom:12px;display:block">Hình Banner</span>

            <div class="col-md-12">
                @Html.EditorFor(model => model.HinhBanner, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HinhBanner, "", new { @class = "text-danger" })
            </div>

        </div>

        <div class="form-group col-md-12">
            <div class="col-md-offset-2 btn-touch">
                <input type="submit" value="Cập nhật" class="btn btn-warning" />
            </div>
        </div>
        <div class="col-md-12 back-to-list ">
            @Html.ActionLink("Trở lại", "Index")
        </div>
    </div>
}

