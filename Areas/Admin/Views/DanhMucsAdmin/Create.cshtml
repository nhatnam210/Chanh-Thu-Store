@model ChanhThu_Store.Models.DanhMuc

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Main_Admin.cshtml";
}


@using (Html.BeginForm("Create", "DanhMucsAdmin", FormMethod.Post, new { @class = "form" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h2 class="table-admin__title text-center text-capitalize">Thêm Danh Mục</h2>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.MaDanhMuc, new { htmlAttributes = new { @class = "form-control" } })

    <div class="form-group">
        <span class="label-admin">Tên Danh Mục</span>
        <div class="col-md-12">
            @Html.EditorFor(model => model.TenDanhMuc, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenDanhMuc, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group col-md-12">
        <div class="col-md-offset-2 btn-touch">
            <input type="submit" value="Thêm" class="btn btn-success" />
        </div>
    </div>
    <div class="col-md-12 back-to-list">
        @Html.ActionLink("Trở về", "Index")
    </div>
</div>
}
