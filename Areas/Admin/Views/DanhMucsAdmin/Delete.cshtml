@model ChanhThu_Store.Models.DanhMuc

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Main_Admin.cshtml";
}

<div class="form">
    <div class="max">
        @*<h2 class="admin-title">Delete Section</h2>*@
        @*<hr />*@
        <h2 class="question text-center">Bạn có chắc chắn muốn xóa danh mục <span class="text-primary text-capitalize">@Model.TenDanhMuc</span>không ?</h2>
        <h3 class=" text-center text-white">Những sản phẩm thuộc danh mục <span class="text-primary text-capitalize">@Model.TenDanhMuc</span> cũng sẽ bị xóa!</h3>
        <dl class="dl-horizontal text-center text-white h1">
            <dd>
                @Html.DisplayFor(model => model.MaDanhMuc)
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions btn-touch">
                <input type="submit" value="Xóa" class="btn btn-danger" />
            </div>
            <div class=" col-md-12 back-to-list">
                @Html.ActionLink("Trở lại", "Index")
            </div>
        }
    </div>
</div>
