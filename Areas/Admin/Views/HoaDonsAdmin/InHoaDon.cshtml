@model ChanhThu_Store.Models.HoaDon
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ChanhThuStoe | Bill</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Areas/AssetAdmin/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Areas/AssetAdmin/css/adminlte.min.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css">
    <!-- Site CSS -->
    <link rel="stylesheet" href="~/Content/css/style.css">
    <!-- Responsive CSS -->
    <link rel="stylesheet" href="~/Content/css/responsive.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/Content/css/custom.css">

    <link rel="stylesheet" href="~/Content/css/all.css">
    <link rel="stylesheet" href="~/Content/css/animate.css">
    <link rel="stylesheet" href="~/Content/css/baguetteBox.min.css">
    <link rel="stylesheet" href="~/Content/css/bootsnav.css">
    <link rel="stylesheet" href="~/Content/css/bootstrap-select.css">
    <link rel="stylesheet" href="~/Content/css/carousel-ticker.css">
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="wrapper">
        <!-- Main content -->
        <section class="invoice">
            <!-- title row -->
            <div class="row">
                <div class="col-12">
                    <h2 class="page-header">
                        <i style="margin-right:16px" class="fas fa-store"></i>ChanhThuStore
                        @*<small class="float-right">Ngày: @Model.NgayLap.Value.ToShortDateString()</small>*@
                        <small class="float-right">Ngày: @Model.NgayLap</small>
                    </h2>
                </div>
                <!-- /.col -->
            </div>
            <!-- info row -->
            <div class="row invoice-info">
                <div class="col-sm-4 invoice-col">
                    From
                    <address>
                        <strong>ChanhThuStore.</strong><br>
                        1874, TPHCM, VietNam<br>
                        SDT: (804) 123-5432<br>
                        Email: ChanhThuStore@gmail.com
                    </address>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                    To
                    <address>
                        <strong>@Model.Ten</strong><br>
                        @Model.DiaChi<br>
                        SDT: @Model.SDT<br>
                        Email: @Model.Email
                    </address>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                    <b>Mã Hóa Đơn: @Model.MaHoaDon</b><br>
                    <br>
                    @*<b>Mã Người Dùng:</b> @Model.MaKhachHang*@
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
            <!-- Table row -->
            @*@Html.Partial("_Table_HoaDon", ChanhThu_Store.Models.BUS.ChiTietHoaDonBUS.ChiTietHoaDon(Model.MaHoaDon))*@
            @{
                Html.RenderAction("BillChiTietHoaDon", "HoaDonsAdmin", new { id = Model.MaHoaDon });
            }
            <!-- /.row -->

            <div class="row">
                <!-- accepted payments column -->
                <div class="col-6 img-credit">
                    <p class="lead">Payment Methods:</p>
                    <img src="~/Areas/AssetAdmin/img/agribank-logo-1CEEE70C76-seeklogo.com.png" alt="Agribank">
                    <img style="margin-left: 14px; margin-right: 14px" src="~/Areas/AssetAdmin/img/momo-upload-api-push-momo-avatar-190131152912 (1).png" alt="Momo">
                    <img src="~/Areas/AssetAdmin/img/truck-24-hour-shipping-flat-circle-icon-vector-3442007-300x300.png" alt="Vietcombank">
                    @*<img src="../../dist/img/credit/paypal2.png" alt="Paypal">*@

                    <p class="text-muted well well-sm shadow-none" style="margin-top: 10px;">
                        Có thể thanh toán online qua các hình thức trên hoặc thanh toán khi nhận hàng
                    </p>
                </div>
                <!-- /.col -->
                <div class="col-6">
                    @*<p class="lead">Amount Due 2/22/2014</p>*@

                    <div class="table-responsive">
                        <table class="table">
                            <tr>
                                <th style="width:50%">Subtotal:</th>
                                <td>@string.Format("{0:#,##0}", @Model.TongTien) đ</td>
                            </tr>

                            <tr>
                                <th>Shipping:</th>
                                <td>0</td>
                            </tr>
                            <tr>
                                <th>Tổng Tiền:</th>
                                <td>@string.Format("{0:#,##0}", @Model.TongTien) đ</td>
                            </tr>
                        </table>
                    </div>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </section>
        <!-- /.content -->
    </div>
    <!-- ./wrapper -->
    <!-- Page specific script -->
    <script>window.addEventListener("load", window.print());</script>
</body>
</html>

